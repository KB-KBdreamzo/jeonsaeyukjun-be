<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jeonsaeyukjun.jeonsaeyukjunbe.mapper.KakaoOauthMapper">

    <!-- 사용자 정보를 가져오는 쿼리 -->
    <select id="selectUserByUserKey" resultType="com.jeonsaeyukjun.jeonsaeyukjunbe.login.dto.KakaoOuathDto">
        SELECT *
        FROM users
        WHERE user_key = #{userKey}
    </select>

    <!-- 사용자 정보를 삽입하는 쿼리 -->
    <insert id="insertUser" parameterType="com.jeonsaeyukjun.jeonsaeyukjunbe.login.dto.KakaoOuathDto">
        INSERT INTO users (user_key, user_name, email, platform_type, profile_img, created_at)
        VALUES (#{userKey}, #{userName}, #{email}, #{platformType}, #{profileImg}, NOW())
    </insert>

    <!-- 사용자 정보를 업데이트하는 쿼리 -->
    <update id="updateUser" parameterType="com.jeonsaeyukjun.jeonsaeyukjunbe.login.dto.KakaoOuathDto">
        UPDATE users
        SET user_name = #{userName}, email = #{email}, platform_type = #{platformType}, profile_img = #{profileImg}
        WHERE user_key = #{userKey}
    </update>

    <!-- 사용자 정보를 삭제하는 쿼리 -->
    <delete id="deleteUser" parameterType="String">
        DELETE FROM users
        WHERE user_key = #{userKey}
    </delete>

</mapper>
